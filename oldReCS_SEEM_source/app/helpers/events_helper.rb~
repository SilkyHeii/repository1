# encoding: utf-8

module EventsHelper

  def events_opts
    { 
      :link_to_day_action => "../events/new",
    }
  end

  def 140_link(text, date, day_action)
    link_to(text, params.merge(:action => day_action, :year => date.year, :month => date.month, :day => date.day), :class => 'ec-day-link')
  end


end
