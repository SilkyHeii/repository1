#coding: utf-8

class NoticeMailer < ActionMailer::Base
  default :from =>'mail.example.jp'

  # Subject can be set in your I18n file at config/locales/en.yml
  # with the following lookup:
  #
  #   en.notice_mailer.sendmail_confirm.subject
  #
  def sendmail_confirm(user, event)
    @user=user
    @event=event
    
    if event[:group] == 'Web班'
    mail(:to => "redstar53_touruiou@yahoo.co.jp", :subject => "#{event[:name]}:#{event[:event]}")
    else
    mail(:to => "redstar53_touruiou@msn.com", :subject => "#{event[:name]}:#{event[:event]}")
    end
  end
end
