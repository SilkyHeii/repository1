:css
  *{
    margin:0;
    padding:0;
  }
  body{
    margin:0;
    _overflow:hidden;
    padding:0;
  }

  #right_frame{
  	height:100%;
  	right:0;
  	margin:0;
  	padding:0;
  	position:fixed;
  	_position:absolute;
  	top:0;
  	width:30%;
  }
  .button_to,.register,.edit,.ec-calendar,.ec-calendar-header{
  	height:100%;
  	margin:0 31% 0 0px;
  	_overflow:auto;
  	padding:0;
  }

- keycolor = 0
- @users.each do |user|
  - if user.attend.to_i  == 0
  - else
    - keycolor = 1

- if @ks == 0
  %br/
  %font{color: "#FA8072", size: "8"} ReCS/SEEM
  %br/
  %font{color: "#FA8072", size: "5"} close
  %br/

- else
  %br/
  %font{color: "#00b400", size: "8"} ReCS/SEEM
  %br/
  %font{color: "#00b400", size: "5"} open
  %br/


%div{align: "right", style: "font-size:15px;" ,:class => "register"}
  = link_to 'ユーザー登録', new_user_path
%br
%div{align: "right", style: "font-size:15px;" ,:class => "edit"}
  %a{:href => "/users/#{@usr.id}/edit"}
    ユーザ情報変更
%br
%div{align: "right", style: "font-size:15px;" }
  = button_to 'logout', {controller: 'login', action: 'logout'}
  = button_to '出席・退席', {action: 'attend'}
%br
%span 出席状況
%span
  %FONT{style: "background:#90EE90"} 　　在籍　　
%span
  %FONT{style: "background:#FA8072"} 　欠席、未出席　
%span
  %FONT{style: "background:#EEEE88"} 　　一時退室　　
%span
  %FONT{style: "background:#1E90FF"} 　　帰宅　　

%br
#member_table

  %br
  %table.dropshadow{border: "1", cellpadding: "5"}
    %tr{height: "15px"}
      %td.midashi{align: "right"}
        %span.midashi2 Grid:
      - @users.each do |user|
        - if user.roles == "grid班"
          - if user.attend.to_i  == 0
            %td{width: "80", align: "center", style: "background:#FA8072;border:none;"}= user.username
          - elsif user.attend.to_i % 2 == 1
            %td{width: "80", align: "center", style: "background:#90EE90;border:none;"}= user.username
          - else
            %td{width: "80", align: "center", style: "background:#EEEE88;border:none;"}= user.username
  %br.space
  %table.dropshadow{border: "1", cellpadding: "5"}
    %tr{height: "15px"}
      %td.midashi{align: "right"}
        %span.midashi2 Net:
      - @users.each do |user|
        - if user.roles == "net班"
          - if user.attend.to_i == 0
            %td{width: "80", align: "center", style: "background:#FA8072;border:none;"}= user.username
          - elsif user.attend.to_i % 2 == 1
            %td{width: "80", align: "center", style: "background:#90EE90;border:none;"}= user.username
