<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :題 %><br />
   <%= f.text_field :eventother %>
  </div>

  <div class="field">
    <%= f.label :内容 %><br />
    <%= f.text_area :comment %>
  </div>

<%= link_to 'Back', calendar_path %>

<% end %>
